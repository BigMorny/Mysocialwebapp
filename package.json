{
  "name": "mysocial-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "kill:port": "node scripts/kill-port.mjs",
    "predev:ports": "node scripts/kill-port.mjs 4000 && node scripts/kill-port.mjs 3000",
    "dev": "pnpm run predev:ports && concurrently \"pnpm --filter api dev\" \"pnpm --filter web dev\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "prisma:migrate": "pnpm --filter api prisma migrate dev",
    "prisma:seed": "pnpm --filter api prisma db seed"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "typescript": "^5.6.0"
  },
  "packageManager": "pnpm@9.0.0"
}


